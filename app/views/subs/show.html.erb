<h2><%= @sub.title %></h2>
<label>Description:
<%= @sub.description %>
</label>
<br>
<label>Moderator:
<%= @sub.moderator.username %>
<br>

<% if current_user == @sub.moderator %>
  <%= link_to "Edit Sub", edit_sub_url(@sub) %>
<% end %>
</label>


<h2>Posts</h2>

<% @sub.posts.each do |post| %>
  <%=link_to "#{post.title}", post_url(post) %>
<% end %>
