<h1>Edit Sub</h1>

<form class="" action="<%=sub_url(@sub.id)%>" method="post">
  <input type="hidden" name="_method" value="patch">

  <label>Title:
    <input type="text" name="sub[title]" value="<%=@sub.title %>">
  </label>

  <label>Description:
    <textarea name="sub[description]" rows="8" cols="80">
      <%=@sub.description%>
    </textarea>
  </label>

  <button type="submit" name="button">Edit Sub</button>

</form>
