<h1>New Post</h1>


<form class="" action="<%=sub_posts_url(params[:sub_id])%>" method="post">

  <label>Title:
    <input type="text" name="post[title]" value="">
  </label>

  <label>Url:
    <input type="text" name="post[url]" value="">
  </label>

  <label>Content:
    <textarea name="post[content]" rows="8" cols="80"></textarea>
  </label>

  <label>Subs</label>

  <input type="hidden" name="post[sub_ids][]" value="">

  <% Sub.all.each do |sub| %>
    <label><%= sub.title %>
      <input type="checkbox" name="post[sub_ids][]" value="<%=sub.id%>"
      <%= "checked" if @post.sub_ids.include?(sub.id) %>
      />
    </label>
  <% end %>

  <button type="submit" name="button">Create Post</button>

</form>
